<Window x:Class="MessageBox.MB_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MessageBox"
        mc:Ignorable="d"
        Title="Window_MB" Height="200" Width="400" AllowsTransparency="True" WindowStyle="None" Background="{x:Null}">
    <Grid>
        <Grid x:Name="Gbody">
            <Border Background="White" CornerRadius="20"/>
        </Grid>
        <Grid Cursor="Hand" x:Name="Gbar" Height="40" VerticalAlignment="Top" MouseDown="Gbar_MouseDown">
            <Border Background="White" CornerRadius="20"/>
            <Button x:Name="btnClose" Content="X" Style="{StaticResource MyCloseButton}" 
                    HorizontalAlignment="Left" Margin="342,0,0,0" VerticalAlignment="Top" Width="58" Height="40" Background="#FFE74646"/>
        </Grid>
    </Grid>
</Window>
